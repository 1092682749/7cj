.slide-image{
  width: 100%;
}
.index-content{
  padding: 0 20rpx;
}
.index-content-body{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 140rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.index-content-cover{
  width: 210rpx;
  height: 140rpx;
}
.index-content-right{
  width: calc(100% - 230rpx);
  padding-left: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.index-content-all{
  width: 100%;
  padding-left: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.index-content-right view{
  font-size: 23rpx;
  color: #999;
}
.index-content-right view text{
  margin-right: 40rpx;
}
.index-content-title{
  font-size: 34rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.index-scroll{
  position: relative;
  display: flex;
  justify-content: center;
}
.index-div{
  display: inline-flex;
  width: 120rpx;
  height: 100rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}
.index-slide{
  position: absolute;
  bottom: 0;
  background-color: rgb(253,156,45);
  width: 120rpx;
  height: 6rpx;
}
.index-slide-show{
  color: rgb(253,156,45);
  border-bottom: 7rpx solid rgb(253,156,45);
}
.index-content-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.index-content-bottom view{
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.index-content-bottom image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}